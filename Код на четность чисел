number = int(input("Введите число: "))
if number == 0:
    print("число равно нулю")
elif number < 0:
    if number %2 == 0:
        print("число отрицательное, четное")
    else:
        print("число отрицательное, нечетное")
elif number %2 == 0:
    print("число положительное, четное")
else:
    print("число положительное, нечетное")
